<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_zhuce"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageButton
            android:id="@+id/ib_back"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/back"
            android:background="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="立即注册"
            android:textSize="18dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:paddingLeft="5dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/id_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:paddingLeft="30dp"
            android:id="@+id/et_telzc"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:paddingLeft="5dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/password_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:inputType="textPassword"
            android:paddingLeft="30dp"
            android:id="@+id/et_passwordzc"
            android:hint="请输入密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:paddingLeft="5dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/password_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:inputType="textPassword"
            android:paddingLeft="30dp"
            android:id="@+id/et_querenpwd"
            android:hint="确认密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:paddingLeft="5dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/name_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:paddingLeft="30dp"
            android:id="@+id/et_nichengzc"
            android:hint="请输入昵称"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_zhuce"
            android:background="@drawable/selector_login"
            android:textSize="18dp"
            android:textColor="#FFF"
            android:text="注册"
            android:layout_centerInParent="true"
            android:layout_width="300dp"
            android:onClick="onClickEvent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>
